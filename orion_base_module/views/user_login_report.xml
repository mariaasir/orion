<!-- views/user_login_report.xml -->
<odoo>
  <template id="report_user_login">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="user">
        <div class="page">
          <h2>Datos de Inicio de Sesión</h2>
          <p><strong>Nombre:</strong> <t t-esc="user.name"/></p>
          <p><strong>Usuario:</strong> <t t-esc="user.login"/></p>
          <p><strong>Contraseña:</strong> <t t-esc="user.temp_password"/></p>
          <p>Por favor, guarda esta información para poder acceder al sistema.</p>
        </div>
      </t>
    </t>
  </template>
</odoo>
