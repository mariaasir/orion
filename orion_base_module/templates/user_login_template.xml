    model="res.users"
    string="Credenciales de Usuario"
    report_type="qweb-pdf"
    name="orion_base_module.report_user_credentials"
    file="orion_base_module.report_user_credentials"
    print_report_name="'Credenciales_%s' % (object.name)"
  />
</odoo>
