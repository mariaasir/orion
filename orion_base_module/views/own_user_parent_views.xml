<odoo>
    <record id="view_res_users_kanban_parent_own" model="ir.ui.view">
        <field name="name">res.users.kanban.parent.own</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="id"/>
                <field name="name"/>
                <field name="email"/>
                <field name="dni"/>
                <field name="birthdate"/>
                <field name="phone"/>
                <field name="child_ids"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record card shadow-sm p-2 rounded" style="width: 500px; display: flex; flex-direction: row;">
                            <!--Tarjeta del padre/madre-->
                            <div style="width: 250px; margin-right: 16px;">
                                <div class="text-center mb-2">
                                    <img t-att-src="kanban_image('res.users', 'image_128', record.id.raw_value)"
                                         class="img img-thumbnail rounded-circle"
                                         style="width: 80px; height: 80px; object-fit: cover;"/>
                                    <h5 class="mt-2"><field name="name"/></h5>
                                </div>
                                <div class="o_kanban_details">
                                    <p t-if="record.email.raw_value">
                                        <i class="fa fa-envelope"/> <field name="email"/>
                                    </p>
                                    <p t-if="record.dni.raw_value">
                                        <i class="fa fa-id-card"/> <field name="dni"/>
                                    </p>
                                    <p t-if="record.birthdate.raw_value">
                                        <i class="fa fa-calendar"/> <field name="birthdate"/>
                                    </p>
                                    <p t-if="record.phone.raw_value">
                                        <i class="fa fa-phone"/> <field name="phone"/>
                                    </p>
                                </div>
                            </div>
                            <!--Tarjetas de los hijos-->
                            <div style="display: flex; flex-direction: row; gap: 8px; align-items: flex-start;">
                                <t t-foreach="record.child_ids.raw_value" t-as="child">
                                    <div class="card p-2 rounded shadow-sm" style="width: 200px;">
                                        <h6 t-esc="child[1]"/>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_parent_own_user" model="ir.actions.act_window">
        <field name="name">My User</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="orion_base_module.view_res_users_kanban_parent_own"/>
        <field name="domain">[('id', '=', uid)]</field>
        <field name="context">{'default_user_type': 'parent'}</field>
    </record>

    <menuitem id="menu_parent_own_user"
              name="My Information"
              parent="menu_orion_root"
              action="orion_base_module.action_parent_own_user"
              sequence="10"
              groups="orion_base_module.group_parent"/>
</odoo>